<configuration>
    !-- custom coloring conversion -->
    <conversionRule conversionWord="highlightex" converterClass="com.woop.Squad4J.util.logger.HighlightingCompositeConverterEx" />

    <appender name="STDOUT_info" class="ch.qos.logback.core.ConsoleAppender">
        <withJansi>true</withJansi>
        <encoder>
            <pattern>[%d{yyyy-MM-dd HH:mm:ssZ}] %highlightex([%level]) [%c{0}] - %m%n</pattern>
        </encoder>
    </appender>

    <appender name="FILEOUT_info" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>app.log</file>
        <append>true</append>
        <encoder>
            <pattern>[%d{yyyy-MM-dd HH:mm:ssZ}] %highlightex([%level]) [%c{0}] - %m%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>logs_archive//all//%i-app-log-%d{dd-mm-yyyy}.txt</fileNamePattern>
            <maxFileSize>100MB</maxFileSize>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
    </appender>

    <appender name="FILEOUT_warnings" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>WARN</level>
        </filter>
        <file>errors.log</file>
        <append>true</append>
        <encoder>
            <pattern>[%d{yyyy-MM-dd HH:mm:ssZ}] %highlightex([%level]) [%c{0}] - %m%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>logs_archive//errors//%i-errors-log-%d{dd-mm-yyyy}.txt</fileNamePattern>
            <maxFileSize>5MB</maxFileSize>
            <maxHistory>14</maxHistory>
        </rollingPolicy>
    </appender>


    <root level="info">
        <appender-ref ref="FILEOUT_warnings" />
        <appender-ref ref="STDOUT_info" />
        <appender-ref ref="FILEOUT_info" />
    </root>

</configuration>